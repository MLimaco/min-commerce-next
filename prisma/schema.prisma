generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String   @id @default(uuid())
  title         String
  description   String
  price         Float
  imageUrl      String
  category      String
  onSale        Boolean  @default(false)
  ranking       Float    @default(0)
  deliveryTime  String   // "24 hrs", "12 hrs", "1 d√≠a", etc.
  brand         String
  seller        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}